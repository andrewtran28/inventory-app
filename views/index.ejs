<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
  <body>
    <%- include('header') %>

    <main>
      <div class="platforms-cont">
        <h1>Platforms</h1>
        <ul class="list-platforms">
          <% platforms.forEach((platform) => { %>
            <li class="list-platform">
                <a class="platform" href="/library?platform=<%= platform.platform_name %>">
                    <%= platform.platform_name%>
                </a>
            </li>
          <% }); %>
        </ul>
      </div>

      <hr>
      <div class="genres-cont">
        <h1>Genres</h1>
        <ul class="list-genres">
          <% genres.forEach((genre) => { %>
            <li class="list-genre">
              <a class="genre" href="/library?genre=<%= genre.genre_name %>">
                <%= genre.genre_name %>
              </a>
            </li>
          <% }); %>
        </ul>
      </div>

      <hr>
    </main>

  </body>
</html>